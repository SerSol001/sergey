#include <iostream>
const double pi = 3.14;
double CircleLenght(double radius)
{
  return 2.0 * pi * radius;
}
double CircleArea(double radius)
{
  return pi * radius * radius ;
}
int main()
{
  double radius;
  std::cout << "Vvedite radius kruga: ";
  std::cin >> radius;
  std::cout << "Dlina kruga = " << CircleLenght(radius) << std::endl;
  std::cout << "Ploschad' kruga = "   << CircleArea  (radius) << std::endl;
  return 0;
}
